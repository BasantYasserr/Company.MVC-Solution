@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>
<br />
<br />
<form asp-action="Edit">

    <div asp-validation-summary="All" class="alert text-danger"></div>
    <partial name="PartialViews/EditCreateDepartmentPartialView" model="Model" />

    <br />
    <input type="submit" value="Save" class="btn btn-warning" />
    <a asp-controller="Departments" asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}