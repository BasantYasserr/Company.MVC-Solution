@model Department

@{
    ViewData["Title"] = "Create";
}

<h1>Create Department Page</h1>
<br />
<br />

<form asp-action="Create">
    <partial name="PartialViews/EditCreateDepartmentPartialView" model="Model" />
    <br />
    <input type="submit" value="Create" class="btn btn-primary"/>
