@model EmployeeViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Employee</h1>
<br />
<br />
<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="alert text-danger"></div>
    <partial name="PartialViews/EditCreateEmployeePartialView" model="Model" />

    <input type="hidden" asp-for="ImageName" />

    <br />
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-controller="Employees" asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>


@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}