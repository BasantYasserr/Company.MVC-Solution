@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<form asp-action="Index">
    <div class="row">
        <div class="col-8">
        <input type="text" id="id" name="InputSearch" class="form-control" />
        </div>
        <div class="col-4">
        <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>
</form>
<br />
<br />
<a asp-controller="Employees" asp-action="Create" class="btn btn-primary">Create Employee</a>
<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <tr>
            <th>@Html.DisplayNameFor(E => E.Image)</th>
            <th>@Html.DisplayNameFor(E => E.Name)</th>
            <th>@Html.DisplayNameFor(E => E.Age)</th>
            <th>@Html.DisplayNameFor(E => E.WorkFor)</th>
            <th>@Html.DisplayNameFor(E => E.Address)</th>
            <th>@Html.DisplayNameFor(E => E.Email)</th>
            <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(E => E.Salary)</th>
            <th>@Html.DisplayNameFor(E => E.IsActive)</th>
            <th>@Html.DisplayNameFor(E => E.HiringDate)</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        @foreach (var employee in Model)
        {
            <tr>
                <td>
                    <img src="~/files/images/@employee.ImageName" width="50" height="50" class="rounded-circle" />
                </td>
                <td>@employee.Name</td>
                <td>@employee.Age</td>
                <td>@employee.WorkFor?.Name</td>
                <td>@employee.Address</td>
                <td>@Html.DisplayFor(M => employee.Email)</td>
                <td>@employee.PhoneNumber</td>
                <td>@Html.DisplayFor(M => employee.Salary)</td>
                <td>@Html.DisplayFor(M => employee.IsActive)</td>
                <td>@employee.HiringDate</td>
                <partial name="_ButtonPartialView" model="@employee.Id"/>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-warning">No Employees Found.</div>
}
