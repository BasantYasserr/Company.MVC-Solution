@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All User Roles</h1>
<br />
<br />
<a asp-controller="Role" asp-action="Create" class="btn btn-primary">Create Role</a>
<br />
<br />

<form asp-action="Index">
    <div class="row">
        <div class="col-8">
            <input type="text" id="id" name="InputSearch" class="form-control" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>
</form>
<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <tr>
            <th>@Html.DisplayNameFor(D => D.Id)</th>
            <th>@Html.DisplayNameFor(D => D.RoleName)</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.RoleName</td>
                <partial name="_ButtonPartialView" model="@user.Id" />
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-warning">There's No Roles'.</div>
}
