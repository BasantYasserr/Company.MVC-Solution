@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Role</h1>
<br />
<br />
<form asp-action="Edit">
    <div asp-validation-summary="All" class="alert text-danger"></div>
    <partial name="PartialViews/EditCreateRolePartialView" model="Model" />
    <br />
    <br />
    <a asp-action="AddOrRemoveUser" asp-route-roleid="@Model.Id" class="btn btn-success m-1">Add Or Remove User</a>

    <input type="submit" value="Save" class="btn btn-primary m-1" />
    
    <a asp-action="Index" class="btn btn-secondary m-2">Back to List</a>
</form>


@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}